{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "msvc build",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/DUNICODE",
                "/D_UNICODE",
                "/Zi",
                "/Fe:",
                "helloworld.exe",
                "helloworld.cpp",
                "advapi32.lib"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Linux build",
            "type": "shell",
            "command": "g++ -Wall -std=c++17 -g helloworld.cpp -o helloworld",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}