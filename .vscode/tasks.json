{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "msvc build",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/DUNICODE",
                "/D_UNICODE",
                "/Zi", // Symbols
                "/Fe:", // executable name
                "helloworld.exe",
                "helloworld.cpp",
                "advapi32.lib"
            ],
            "group":  {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}